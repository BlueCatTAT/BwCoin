<script>
    layui.config({base: '/public/layuiadmin/'}).extend({index: 'lib/index'}).use(['index', 'form','upload','layedit'], function(){
        var $ = layui.$,form = layui.form;
        var upload = layui.upload;
        var fileurl = '<?=$result['pic']?>';
        var layedit = layui.layedit;
        layedit.set({uploadImage:{url:'/upload/edit',type:'post'}});
        var index = layedit.build('content',{hideTool:['face'], height: 350}); //建立编辑器
        //执行实例
        var uploadInst = upload.render({
            elem: '#test1' //绑定元素
            ,url: '/upload/index' //上传接口
            ,done: function(res){
                fileurl = res.data;
                $("#img").attr("src",fileurl);
            }
            ,error: function(){
                fileurl = null;
                $("#img").attr("src",fileurl);
            }
        });
        form.on("submit(LAY-user-role-submit)",function (data) {
            let jsonstr = {
                id:data.field.id,
                title:data.field.title,
                total_num:data.field.total_num,
                deal:data.field.deal,
                price:data.field.price,
                user_max_mun:data.field.user_max_mun,
                start_time:data.field.start_time,
                cycle:data.field.cycle,
                unfreeze:data.field.unfreeze,
                financial_cycle:data.field.financial_cycle,
                time_type:data.field.time_type,
                min:data.field.min,
                max:data.field.max,
                pic:fileurl,
                content:layedit.getContent(index),
                status:data.field.status
            };
            var index2 = parent.layer.getFrameIndex(window.name); //获取窗口索引
            $.post("/adminactivity/editxbys",jsonstr,function (msg) {
                if(msg == 1){
                    //发异步，把数据提交给php
                    layer.alert("修改新币预售成功", {icon: 6}, function() {
                        //关闭当前frame
                        parent.layer.close(index2);
                        // 可以对父窗口进行刷新
                        parent.location.reload();
                    });
                }else if(msg == 2){
                    layer.alert("该新币预售活动已存在，请重新输入")
                }else{
                    layer.alert("修改新币预售失败")
                }
            });
        });

        $("#LAY-user-role-close").on("click",function (data) {
            parent.layer.close(index2);
        });
    });
</script>
